     <div class="wrapper container">
        

        <section id="kampretan-section" class="kampretan-section section">
            <h2 class="section-title">Question Answering System</h2>
            <div class="record sound" ng-app="textApp" ng-controller="textCtrl">
                    <p>Input text here</p>
                    <div class="player text-center" >
                        <form id="QuestionForm" method="post" action="/getAnswer" data-toggle="validator" onsubmit="myButton.disabled=true; return true;">
                        <textarea rows="4" cols="50" ng-model="textInput" form="QuestionForm" id="question" name="question" data-error="Please fill this field" required></textarea>
                        <div class="help-block with-errors"></div>
                        <h4 align="left">Input Text:</h4>
                        <div class="item active" id="input-text">
                            <blockquote class="quote">
                            <% if (question == ''){%>
                                <!--<p>{{textInput}}</p>-->
                            <%} else{%>
                                <p><%= question %></p>
                            <%}
                            %>
                            </blockquote>
                        </div>
                        <input type="submit" value="Get Answer" class="btn btn-primary" id="myButton"/>
                        </form>
                        <h4 align="left">Answer:</h4>
                        <div class="item active" id="output-text">
                            <blockquote class="quote">
                                <p><%= jawaban %></p>
                            </blockquote>
                        </div>
                    </div>
                    <div class="col-md-6 col-md-offset-3" id="grow-box" >
                        <div class="relevant-list" ng-hide="showR">
                            <h3><%= title %></h3>
                            <p><%= dokumen%></p>
                        </div>
                        <br>
                        <div class="btnshow-frame text-center">
                            <button type="button" class="btn btn-link" ng-click="showRelevantFunction()"> <i class="fa fa-chevron-up" ng-hide="showR"></i><br ng-hide="showR">{{resultBtnText}} <br ng-hide="!showR"> <i class="fa fa-chevron-down" ng-hide="!showR"></i> </button>
                        </div>
                    </div>
                    
            </div>
            <div>
                
            </div>
        </section><!--//section-->
        
        
